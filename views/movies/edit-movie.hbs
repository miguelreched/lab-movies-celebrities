<a href="/">Home</a>

<h2>Update Movie </h2>

<form action="/movies/{{this.editMovie._id}}" method="post">

<label for="title">Title: </label>
<input type="text" name="title" value="{{this.editMovie.title}}">

<br>

<label for="genre">Genre: </label>
<input type="text" name="genre" value="{{this.editMovie.genre}}">

<br>

<label for="plot">Plot: </label>
<input type="text" name="plot" value="{{this.editMovie.plot}}">

<br>

<label for="cast">Cast: </label>
<select name="cast">
<option value="{{this.editMovie.cast._id}}" selected></option>

{{#each this.allCelebrities}}

    <option value="{{this._id}}">{{this.name}}</option>

{{/each}}

</select>

<button>Updates</button>
</form>